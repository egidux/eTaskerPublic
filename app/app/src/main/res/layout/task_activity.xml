<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <android.support.v7.widget.Toolbar
        android:id="@+id/taskActivityTopBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/colorPrimary"
        android:elevation="4dp"
        android:minHeight="?attr/actionBarSize"></android.support.v7.widget.Toolbar>

    <LinearLayout android:id="@+id/taskFooter"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/taskBottomLeftButton"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="?attr/colorButtonNormal"
            android:backgroundTint="?attr/colorButtonNormal"
            android:clickable="true"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingBottom="7dp"
            android:paddingTop="7dp">

            <ImageView
                android:id="@+id/taskBottomLeftButtonImage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:scaleType="fitCenter"
                android:src="@drawable/ic_navigation_black_24dp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/taskBottomRightButton"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal"
            android:clickable="true"
            android:paddingTop="7dp"
            android:paddingBottom="7dp"
            android:background="@color/green">

            <TextView
                android:id="@+id/taskBottomRightButtonText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:textSize="22dp"/>

            <ImageView
                android:id="@+id/taskBottomRightButtonImage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:scaleType="fitCenter"
                android:paddingTop="4dp"
                android:src="@drawable/ic_play_circle_outline_white_24dp" />
        </LinearLayout>
    </LinearLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@id/taskFooter"
            android:layout_below="@id/taskActivityTopBar" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingTop="25dp"
                android:paddingLeft="10dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="CLIENT"
                    android:textSize="20dp"
                    android:textColor="@color/green"/>
                <TextView
                    android:id="@+id/TaskClientName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="17.5dp"
                    android:paddingLeft="5dp"
                    android:textColor="@color/black"/>
                <TextView
                    android:id="@+id/TaskClientAddress"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="15dp"
                    android:paddingLeft="10dp"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="25dp"
                    android:text="LOCATION"
                    android:textSize="20dp"
                    android:textColor="@color/green"/>
                <TextView
                    android:id="@+id/TaskObjectName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="17.5dp"
                    android:paddingLeft="5dp"
                    android:textColor="@color/black"/>
                <TextView
                    android:id="@+id/TaskObjectAddress"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="15dp"
                    android:paddingLeft="10dp"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="25dp"
                    android:text="TASK TITLE"
                    android:textSize="20dp"
                    android:textColor="@color/green"/>
                <TextView
                    android:id="@+id/TaskTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="17.5dp"
                    android:paddingLeft="5dp"
                    android:textColor="@color/black"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="25dp"
                    android:text="TASK DESCRIPTION"
                    android:textSize="20dp"
                    android:textColor="@color/green"/>
                <TextView
                    android:id="@+id/TaskDescription"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="17.5dp"
                    android:paddingLeft="5dp"
                    android:textColor="@color/black"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="25dp"
                    android:text="ASSIGNED WORKER"
                    android:textSize="20dp"
                    android:textColor="@color/green"/>
                <TextView
                    android:id="@+id/TaskWorker"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="17.5dp"
                    android:paddingLeft="5dp"
                    android:textColor="@color/black"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="25dp"
                    android:text="PLANNED TASK START TIME"
                    android:textSize="20dp"
                    android:textColor="@color/green"/>
                <TextView
                    android:id="@+id/TaskPlanedStart"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="17.5dp"
                    android:paddingLeft="5dp"
                    android:textColor="@color/black"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="25dp"
                    android:text="PLANNED TASK END TIME"
                    android:textSize="20dp"
                    android:textColor="@color/green"/>
                <TextView
                    android:id="@+id/TaskPlanedEnd"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="17.5dp"
                    android:paddingLeft="5dp"
                    android:textColor="@color/black"/>
            </LinearLayout>
        </ScrollView>

</RelativeLayout>